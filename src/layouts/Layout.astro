---
import AsideMenu from '@/components/AsideMenu.astro'
import FooterMenu from '@/components/footer/FooterMenu.astro'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Astro description'
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body class='p-2 body'>
		<div
			class='asideMenu bordeVerde colorUno p-2 [grid-area:aside] flex flex-col overflow-y-auto w-full'
		>
			<AsideMenu />
		</div>
		<div
			class='mainMenu p-2 bordeVerde [grid-area:main] overflow-y-auto w-full h-screen'
		>
			<slot />
		</div>
		<div class='footerMenu bordeVerde colorUno p-2 [grid-area:footer] h-[88px]'>
			<FooterMenu />
		</div>
		<style>
			.body {
				display: grid;
				grid-template-areas:
					'aside main main'
					'footer footer footer';
				grid-template-columns: 350px 1fr;
				grid-template-rows: 1fr auto;
			}
			.asideMenu {
				height: calc(100vh - 104px);
			}
			.mainMenu {
				height: calc(100vh - 104px);
			}
		</style>
		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--auxi1: rgb(223 172 18);
				--auxi2: rgb(0 129 74);
			}
			html {
				font-family: 'CircularStd', system-ui, sans-serif;
				background-color: black;
				background-size: 224px;
			}
			html .light {
				background: #fff;
				color: black;
			}
			.light {
				background: #fff;
			}
			.bordeRojo {
				border: 1px solid red;
			}
			.bordeVerde {
				border: 1px solid green;
			}
			.colorUno {
				color: var(--auxi1);
			}
			.colorDos {
				color: var(--auxi2);
			}
			@font-face {
				font-family: 'ErasITC';
				src: url('/fonts/ITC Eras Demi.ttf'); /* format('ttf'); */
				/* font-style: normal;
				font-display: swap; */
			}
			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Medium.woff2') format('woff2');
				font-weight: 500;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Book.woff2') format('woff2');
				font-weight: 400;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Light.woff2') format('woff2');
				font-weight: 300;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Bold.woff2') format('woff2');
				font-weight: 700;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'CircularStd';
				src: url('/fonts/CircularStd-Black.woff2') format('woff2');
				font-weight: 900;
				font-style: normal;
				font-display: swap;
			}
		</style>
	</body>
</html>
